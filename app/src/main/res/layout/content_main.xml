<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.busviewerleaflet.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_nav">

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageUX2"
        android:layout_marginBottom="174dp"
        android:onClick="logout"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_leaflet"
        app:layout_constraintTop_toBottomOf="@+id/imageUX2" />

    <Button
        android:id="@+id/btn_leaflet"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_logout"
        android:layout_alignBottom="@+id/btn_logout"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="3dp"
        android:onClick="leaflet"
        android:text="Leaflet"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_logout"
        app:layout_constraintEnd_toStartOf="@+id/btn_logout"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageUX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="leaflet"
        app:layout_constraintBottom_toTopOf="@+id/imageUX2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bus_ux1" />

    <ImageButton
        android:id="@+id/imageUX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="59dp"
        android:onClick="leaflet"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintStart_toStartOf="@+id/imageUX1"
        app:layout_constraintTop_toBottomOf="@+id/imageUX1"
        app:srcCompat="@drawable/bus_ux2" />


</android.support.constraint.ConstraintLayout>
